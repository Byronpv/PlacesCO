<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenl"
    tools:context=".view.view.ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="Orientation">
        <TextView
            android:id="@+id/textpoi1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margingen"
            android:background="@drawable/shape_color_fondo"
            android:text="@string/poi1"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/imageView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margintext"
            android:layout_marginTop="12dp"
            android:scaleType="center"
            android:src="@drawable/observatorio"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textpoi1" />

        <TextView
            android:id="@+id/textinfo"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margintext"
            android:text="@string/infopoi1"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/imageView" />

        <TextView
            android:id="@+id/textlocate"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_place_24"
            android:padding="10dp"
            android:text="@string/locatepoi1"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/textinfo"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textweather"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_ac_unit_24"
            android:padding="10dp"
            android:text="@string/weatherpoi1"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/textlocate" />

        <TextView
            android:id="@+id/ratingtext"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_star_rate_24"
            android:padding="10dp"
            android:text="@string/weatherpoi1"
            app:layout_constraintTop_toBottomOf="@id/textweather"
            android:gravity="center"
            tools:ignore="MissingConstraints,UnknownId" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/locate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_place_24"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                tools:ignore="MissingConstraints" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>